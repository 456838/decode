<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/Passport.LoginRegLayoutPadding"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:gravity="center_vertical" android:id="@id/tv_area_code" android:background="@drawable/passport_group_first_item_normal_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Passport.HyperLinkStyle" />
        <ImageView android:layout_gravity="end|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/passport_arrow_right" android:paddingEnd="@dimen/passport_arrow_right_padding_h" />
    </FrameLayout>
    <EditText android:gravity="center_vertical" android:id="@id/ev_phone" android:background="@drawable/passport_group_last_item_normal_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/passport_input_phone_hint" android:singleLine="true" android:maxLength="16" android:phoneNumber="true" style="@style/Passport.EditTextStyle" />
    <TextView android:layout_gravity="center_horizontal" android:id="@id/error_status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_buttons_margin_v" style="@style/Passport.ErrorNoticeAppearance" />
    <Button android:id="@id/btn_phone_next" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/passport_reg_content_bottom_margin" android:text="@string/passport_next" style="@style/Passport.BlueButton" />
</LinearLayout>